<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:elevation="2dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="15dp"
    android:backgroundTint="@color/green"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:padding="15dp">


        <TextView
            android:id="@+id/tv_rankname"
            android:layout_width="259dp"
            android:layout_height="29dp"
            android:ellipsize="end"
            android:fontFamily="@font/laila_bold"
            android:maxLines="2"
            android:layout_marginStart="10dp"
            android:text="Username"
            android:textColor="@color/cream"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_ranknumber"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.506" />

        <TextView
            android:id="@+id/tv_ranknumber"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:ellipsize="end"
            android:fontFamily="@font/laila_bold"
            android:maxLines="2"
            android:text="1."
            android:textColor="@color/cream"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rankpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/laila_bold"
            android:maxLines="1"
            android:text="90"
            android:textColor="@color/cream"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_rankname"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/coin"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_rankpoint"
            app:layout_constraintStart_toEndOf="@+id/tv_rankpoint"
            app:layout_constraintTop_toTopOf="@+id/tv_rankpoint"
            app:srcCompat="@drawable/coin" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>